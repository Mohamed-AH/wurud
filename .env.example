# Server Configuration
NODE_ENV=development
PORT=3000

# MongoDB Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/duroos?retryWrites=true&w=majority

# Session Secret (generate a random string)
SESSION_SECRET=your-random-session-secret-here

# Google OAuth 2.0
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Admin Email Whitelist (comma-separated)
ADMIN_EMAILS=admin@example.com,another-admin@example.com

# File Upload Configuration
UPLOAD_DIR=/mnt/audio
MAX_FILE_SIZE=62914560

# Production URL (update for production)
SITE_URL=http://localhost:3000
