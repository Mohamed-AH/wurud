{
  "name": "duroos-islamic-lectures",
  "version": "1.0.0",
  "description": "Islamic audio lectures platform with streaming and admin management",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "db:import": "node scripts/import-csv.js",
    "test": "jest --coverage --verbose",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:ci": "npm run test:unit && npm run test:integration",
    "test:log": "npm test 2>&1 | tee test-logs/test-$(date +%Y%m%d-%H%M%S).log",
    "test:log:all": "npm test > test-logs/test-full-$(date +%Y%m%d-%H%M%S).log 2>&1",
    "test:unit:log": "npm run test:unit 2>&1 | tee test-logs/unit-$(date +%Y%m%d-%H%M%S).log",
    "test:integration:log": "npm run test:integration 2>&1 | tee test-logs/integration-$(date +%Y%m%d-%H%M%S).log",
    "test:e2e:log": "npm run test:e2e 2>&1 | tee test-logs/e2e-$(date +%Y%m%d-%H%M%S).log"
  },
  "keywords": [
    "islamic",
    "lectures",
    "audio",
    "streaming",
    "arabic"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-ejs-layouts": "^2.5.1",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "moment-hijri": "^2.1.2",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "music-metadata": "^8.1.4",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.3",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
