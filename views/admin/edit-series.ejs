            const currentCategory = series.category || 'Other';
          %>
          <select id="category" name="category" class="form-control" style="background: #fffbf0; border: 2px solid #C19A6B;">
            <option value="Aqeedah" <%= currentCategory === 'Aqeedah' ? 'selected' : '' %>><%= adminLocale === 'ar' ? 'ÿπŸÇŸäÿØÿ©' : 'Aqeedah' %></option>
            <option value="Fiqh" <%= currentCategory === 'Fiqh' ? 'selected' : '' %>><%= adminLocale === 'ar' ? 'ŸÅŸÇŸá' : 'Fiqh' %></option>
            <option value="Tafsir" <%= currentCategory === 'Tafsir' ? 'selected' : '' %>><%= adminLocale === 'ar' ? 'ÿ™ŸÅÿ≥Ÿäÿ±' : 'Tafsir' %></option>
            <option value="Hadith" <%= currentCategory === 'Hadith' ? 'selected' : '' %>><%= adminLocale === 'ar' ? 'ÿ≠ÿØŸäÿ´' : 'Hadith' %></option>
            <option value="Seerah" <%= currentCategory === 'Seerah' ? 'selected' : '' %>><%= adminLocale === 'ar' ? 'ÿ≥Ÿäÿ±ÿ©' : 'Seerah' %></option>
            <option value="Akhlaq" <%= currentCategory === 'Akhlaq' ? 'selected' : '' %>><%= adminLocale === 'ar' ? 'ÿ£ÿÆŸÑÿßŸÇ' : 'Akhlaq' %></option>
            <option value="Other" <%= currentCategory === 'Other' ? 'selected' : '' %>><%= adminLocale === 'ar' ? 'ÿ£ÿÆÿ±Ÿâ' : 'Other' %></option>
          </select>
          <p style="font-size: 12px; color: #C19A6B; margin-top: 4px; font-weight: 600;">
            <%= adminLocale === 'ar' ? '‚ö†Ô∏è Ÿáÿ∞ÿß ÿßŸÑÿ≠ŸÇŸÑ Ÿäÿ≠ÿØÿØ ÿ™ÿµŸÜŸäŸÅ ÿßŸÑÿ≥ŸÑÿ≥ŸÑÿ© ŸÅŸä ŸÅŸÑÿßÿ™ÿ± ÿßŸÑÿµŸÅÿ≠ÿ© ÿßŸÑÿ±ÿ¶Ÿäÿ≥Ÿäÿ©' : '‚ö†Ô∏è This field determines the series category in homepage filters' %>
          </p>
        </div>

        <div class="form-group">
          <label><%= adminLocale === 'ar' ? 'ŸÜŸàÿπ ÿßŸÑŸÖÿ≠ÿ™ŸàŸâ' : 'Content Type' %></label>
          <div style="display: flex; gap: 24px; padding: 16px; background: #f8f9fa; border-radius: 8px;">
            <%
              // Content TYPE tags only - subject/topic is handled by Category above
              const availableTags = ['series', 'lecture', 'khutba'];
              const tagLabels = adminLocale === 'ar' ? {
                'series': 'ÿ≥ŸÑÿ≥ŸÑÿ© ÿØÿ±Ÿàÿ≥',
                'lecture': 'ŸÖÿ≠ÿßÿ∂ÿ±ÿ© ŸÖŸÜŸÅÿ±ÿØÿ©',
                'khutba': 'ÿÆÿ∑ÿ®ÿ© ÿ¨ŸÖÿπÿ©'
              } : {
                'series': 'Lecture Series',
                'lecture': 'Single Lecture',
                'khutba': 'Friday Sermon'
              };
              const seriesTags = series.tags || [];
            %>
            <% availableTags.forEach(tag => { %>
              <div class="checkbox-group">
                <input
                  type="checkbox"
                  id="tag-<%= tag %>"
                  name="tags"
                  value="<%= tag %>"
                  <%= seriesTags.includes(tag) ? 'checked' : '' %>
                >
                <label for="tag-<%= tag %>" style="margin-bottom: 0; margin-right: 8px;"><%= tagLabels[tag] %></label>
              </div>
            <% }) %>
          </div>
          <p style="font-size: 12px; color: #666; margin-top: 8px;">
            üí° <%= adminLocale === 'ar' ? 'ŸÜŸàÿπ ÿßŸÑŸÖÿ≠ÿ™ŸàŸâ (ÿßŸÑÿ™ÿµŸÜŸäŸÅ ÿ®ÿßŸÑÿ£ÿπŸÑŸâ Ÿäÿ≠ÿØÿØ ÿßŸÑŸÖŸàÿ∂Ÿàÿπ: ÿπŸÇŸäÿØÿ©ÿå ŸÅŸÇŸáÿå ÿ•ŸÑÿÆ)' : 'Content type (Category above determines the subject: Aqeedah, Fiqh, etc.)' %>
          </p>
        </div>

        <div class="form-group">
          <label for="descriptionArabic"><%= adminLocale === 'ar' ? 'ÿßŸÑŸàÿµŸÅ ÿ®ÿßŸÑÿπÿ±ÿ®Ÿäÿ©' : 'Description (Arabic)' %></label>
          <textarea
            id="descriptionArabic"
            name="descriptionArabic"
