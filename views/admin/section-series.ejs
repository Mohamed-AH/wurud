<!DOCTYPE html>
<html lang="<%= adminLocale %>" dir="<%= adminDir %>">
<head>
  <%- include('partials/head') %>
  <title><%= adminLocale === 'ar' ? `محتوى: ${section.title.ar}` : `Content: ${section.title.en}` %> - <%= t('admin_title') %></title>
  <style>
    .page-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 24px;
      flex-wrap: wrap;
      gap: 12px;
    }

    [dir="rtl"] .page-header {
      flex-direction: row-reverse;
    }

    .page-title {
      font-size: 24px;
      font-weight: 600;
      color: #1A5F5A;
    }

    .page-title .section-icon {
      font-size: 28px;
      margin: 0 8px;
    }

    .back-link {
      color: #1A5F5A;
      text-decoration: none;
      font-size: 14px;
    }

    .back-link:hover {
      text-decoration: underline;
    }

    .add-form {
      background: white;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      padding: 20px;
      margin-bottom: 24px;
      display: flex;
      gap: 12px;
      align-items: flex-end;
    }

    [dir="rtl"] .add-form {
      flex-direction: row-reverse;
    }

    .add-form .form-group {
      flex: 1;
    }

    .add-form label {
      display: block;
      font-weight: 600;
      margin-bottom: 6px;
      font-size: 14px;
      color: #333;
    }

    .add-form select {
      width: 100%;
      padding: 10px 14px;
      border: 1px solid #ddd;
      border-radius: 8px;
      font-size: 14px;
      background: white;
    }

    [dir="rtl"] .add-form select {
      text-align: right;
    }

    .add-form select:focus {
      outline: none;
      border-color: #1A5F5A;
    }

    .btn-add {
      background: #1A5F5A;
      color: white;
      padding: 10px 20px;
      border: none;
      border-radius: 8px;
      font-size: 14px;
      font-weight: 600;
      cursor: pointer;
      white-space: nowrap;
    }

    .btn-add:hover {
      background: #155450;
    }

    .series-table {
      width: 100%;
      background: white;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      overflow: hidden;
    }

    .series-table table {
      width: 100%;
      border-collapse: collapse;
    }

    .series-table th,
    .series-table td {
      padding: 14px 16px;
      border-bottom: 1px solid #eee;
    }

    [dir="rtl"] .series-table th,
    [dir="rtl"] .series-table td {
      text-align: right;
    }

    [dir="ltr"] .series-table th,
    [dir="ltr"] .series-table td {
      text-align: left;
    }

    .series-table th {
      background: #f8f9fa;
      font-weight: 600;
      color: #1A5F5A;
      font-size: 13px;
    }

    .series-table tr:last-child td {
      border-bottom: none;
    }

    .series-table tr:hover td {
      background: #f8f9fa;
    }

    .order-cell {
      display: flex;
      flex-direction: column;
      gap: 2px;
      width: 35px;
    }

    .btn-order {
      background: #f0f0f0;
      color: #333;
      border: 1px solid #ddd;
      padding: 4px 8px;
      font-size: 14px;
      cursor: pointer;
      border-radius: 4px;
    }

    .btn-order:hover {
      background: #e0e0e0;
    }

    .btn-order:disabled {
      opacity: 0.3;
      cursor: not-allowed;
    }

    .series-title {
      font-weight: 500;
    }

    .series-title a {
      color: #1A5F5A;
      text-decoration: none;
    }

    .series-title a:hover {
      text-decoration: underline;
    }

    .sheikh-name {
      color: #666;
      font-size: 13px;
    }

    .lecture-count {
      display: inline-block;
      background: #e3f2fd;
      color: #1565c0;
      padding: 4px 10px;
      border-radius: 12px;
      font-size: 13px;
      font-weight: 600;
    }

    .actions-cell {
      display: flex;
      gap: 6px;
      align-items: center;
    }

    [dir="rtl"] .actions-cell {
      flex-direction: row-reverse;
    }

    .btn-sm {
      padding: 5px 10px;
      font-size: 12px;
      border-radius: 6px;
      text-decoration: none;
      border: none;
      cursor: pointer;
    }

    .btn-edit {
      background: #ffc107;
      color: #333;
    }

    .btn-remove {
      background: #dc3545;
      color: white;
    }

    .btn-remove:hover {
      background: #c82333;
    }

    .empty-state {
      text-align: center;
      padding: 60px 20px;
      color: #999;
      background: white;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .empty-state h3 {
      font-size: 18px;
      color: #666;
      margin-bottom: 8px;
    }

    .alert {
      padding: 12px 16px;
      border-radius: 6px;
      margin-bottom: 16px;
    }

    .alert-success {
      background: #d4edda;
      color: #155724;
      border: 1px solid #c3e6cb;
    }

    .alert-danger {
      background: #f8d7da;
      color: #721c24;
      border: 1px solid #f5c6cb;
    }

    .stats-bar {
      display: flex;
      gap: 20px;
      margin-bottom: 20px;
      color: #666;
      font-size: 14px;
    }

    [dir="rtl"] .stats-bar {
      flex-direction: row-reverse;
    }

    @media (max-width: 768px) {
      .add-form {
        flex-direction: column;
        align-items: stretch;
      }

      .series-table {
        overflow-x: auto;
      }

      .hide-mobile {
        display: none;
      }
    }
  </style>
</head>
<body>
  <%- include('partials/header', { activePage: 'sections' }) %>

  <main class="admin-container">
    <div class="page-header">
      <h2 class="page-title">
        <span class="section-icon"><%= section.icon %></span>
        <%= adminLocale === 'ar' ? section.title.ar : section.title.en %>
      </h2>
      <a href="/admin/sections" class="back-link"><%= adminLocale === 'ar' ? '← العودة للأقسام' : '← Back to Sections' %></a>
    </div>

    <% if (success) { %>
      <div class="alert alert-success">
        <% if (success === 'series_added') { %><%= adminLocale === 'ar' ? 'تمت إضافة السلسلة بنجاح!' : 'Series added successfully!' %><% } %>
        <% if (success === 'series_removed') { %><%= adminLocale === 'ar' ? 'تمت إزالة السلسلة بنجاح!' : 'Series removed successfully!' %><% } %>
      </div>
    <% } %>

    <% if (error) { %>
      <div class="alert alert-danger">
        <% if (error === 'series_not_found') { %><%= adminLocale === 'ar' ? 'السلسلة غير موجودة.' : 'Series not found.' %><% } %>
        <% if (error === 'add_failed') { %><%= adminLocale === 'ar' ? 'فشل في إضافة السلسلة.' : 'Failed to add series.' %><% } %>
        <% if (error === 'remove_failed') { %><%= adminLocale === 'ar' ? 'فشل في إزالة السلسلة.' : 'Failed to remove series.' %><% } %>
      </div>
    <% } %>

    <div class="stats-bar">
      <span><%= adminLocale === 'ar' ? 'السلاسل في هذا القسم:' : 'Series in this section:' %> <strong><%= seriesInSection.length %></strong></span>
      <span><%= adminLocale === 'ar' ? 'سلاسل بدون قسم:' : 'Unassigned series:' %> <strong><%= unassignedSeries.length %></strong></span>
    </div>

    <% if (unassignedSeries.length > 0) { %>
      <form class="add-form" method="POST" action="/admin/sections/<%= section._id %>/series/add">
        <div class="form-group">
          <label><%= adminLocale === 'ar' ? 'إضافة سلسلة لهذا القسم' : 'Add series to this section' %></label>
          <select name="seriesId" required>
            <option value=""><%= adminLocale === 'ar' ? '-- اختر سلسلة --' : '-- Select series --' %></option>
            <% unassignedSeries.forEach(function(s) { %>
              <option value="<%= s._id %>"><%= s.titleArabic %> <%= s.titleEnglish ? `(${s.titleEnglish})` : '' %></option>
            <% }) %>
          </select>
        </div>
        <button type="submit" class="btn-add">+ <%= adminLocale === 'ar' ? 'إضافة' : 'Add' %></button>
      </form>
    <% } %>

    <% if (seriesInSection.length > 0) { %>
      <div class="series-table">
        <table>
          <thead>
            <tr>
              <th style="width:50px"><%= adminLocale === 'ar' ? 'ترتيب' : 'Order' %></th>
              <th><%= adminLocale === 'ar' ? 'السلسلة' : 'Series' %></th>
              <th class="hide-mobile"><%= adminLocale === 'ar' ? 'الشيخ' : 'Sheikh' %></th>
              <th><%= adminLocale === 'ar' ? 'الدروس' : 'Lectures' %></th>
              <th><%= adminLocale === 'ar' ? 'إجراءات' : 'Actions' %></th>
            </tr>
          </thead>
          <tbody>
            <% seriesInSection.forEach(function(s, index) { %>
              <tr data-id="<%= s._id %>">
                <td>
                  <div class="order-cell">
                    <button class="btn-order" onclick="moveSeries('<%= s._id %>', 'up')" <%= index === 0 ? 'disabled' : '' %>>&#9650;</button>
                    <button class="btn-order" onclick="moveSeries('<%= s._id %>', 'down')" <%= index === seriesInSection.length - 1 ? 'disabled' : '' %>>&#9660;</button>
                  </div>
                </td>
                <td class="series-title">
                  <a href="/admin/series/<%= s._id %>/edit"><%= s.titleArabic %></a>
                  <% if (s.titleEnglish) { %>
                    <div style="font-size:12px;color:#888;"><%= s.titleEnglish %></div>
                  <% } %>
                </td>
                <td class="sheikh-name hide-mobile">
                  <% if (s.sheikhId) { %>
                    <%= adminLocale === 'ar' ? s.sheikhId.nameArabic : (s.sheikhId.nameEnglish || s.sheikhId.nameArabic) %>
                  <% } else { %>
                    -
                  <% } %>
                </td>
                <td><span class="lecture-count"><%= s.lectureCount || 0 %></span></td>
                <td>
                  <div class="actions-cell">
                    <a href="/admin/series/<%= s._id %>/edit" class="btn-sm btn-edit"><%= adminLocale === 'ar' ? 'تعديل' : 'Edit' %></a>
                    <form action="/admin/sections/<%= section._id %>/series/<%= s._id %>/remove" method="POST" style="display:inline;" onsubmit="return confirm('<%= adminLocale === 'ar' ? 'إزالة السلسلة من هذا القسم؟' : 'Remove series from this section?' %>');">
                      <button type="submit" class="btn-sm btn-remove"><%= adminLocale === 'ar' ? 'إزالة' : 'Remove' %></button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="empty-state">
        <h3><%= adminLocale === 'ar' ? 'لا توجد سلاسل في هذا القسم' : 'No series in this section' %></h3>
        <p><%= adminLocale === 'ar' ? 'استخدم النموذج أعلاه لإضافة سلاسل.' : 'Use the form above to add series.' %></p>
      </div>
    <% } %>
  </main>

  <script>
    const isArabic = '<%= adminLocale %>' === 'ar';
    const sectionId = '<%= section._id %>';

    function moveSeries(seriesId, direction) {
      const rows = document.querySelectorAll('tbody tr');
      const ids = Array.from(rows).map(row => row.dataset.id);

      const currentIndex = ids.indexOf(seriesId);
      if (currentIndex === -1) return;

      const swapIndex = direction === 'up' ? currentIndex - 1 : currentIndex + 1;
      if (swapIndex < 0 || swapIndex >= ids.length) return;

      // Build new order
      const order = ids.map((id, i) => {
        if (i === currentIndex) return { id: ids[swapIndex], order: i };
        if (i === swapIndex) return { id: ids[currentIndex], order: i };
        return { id, order: i };
      });

      fetch(`/admin/sections/${sectionId}/series/reorder`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ order })
      })
      .then(res => res.json())
      .then(data => {
        if (data.success) {
          window.location.reload();
        } else {
          alert(isArabic ? 'فشل في إعادة الترتيب' : 'Failed to reorder');
        }
      })
      .catch(() => alert(isArabic ? 'حدث خطأ' : 'An error occurred'));
    }
  </script>
</body>
</html>
