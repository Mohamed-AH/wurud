<!DOCTYPE html>
<html lang="<%= adminLocale %>" dir="<%= adminDir %>">
<head>
  <%- include('partials/head') %>
  <title><%= t('admin_upload') %> - <%= t('admin_title') %></title>
  <style>
    .upload-section {
      background: white;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      padding: 32px;
      margin-bottom: 32px;
    }

    .upload-section h2 {
      font-size: 20px;
      margin-bottom: 20px;
      color: #2C3E35;
    }

    .drop-zone {
      border: 3px dashed #D4AF37;
      border-radius: 12px;
      padding: 60px 20px;
      text-align: center;
      cursor: pointer;
      transition: all 0.3s ease;
      background: #FAFAF8;
    }

    .drop-zone.dragging {
      background: #FFF9E6;
      border-color: #1A5F5A;
    }

    .drop-zone:hover {
      background: #FFF9E6;
    }

    .drop-zone-icon {
      font-size: 48px;
      margin-bottom: 12px;
    }

    .drop-zone-text {
      font-size: 16px;
      color: #666;
      margin-bottom: 8px;
    }

    .drop-zone-hint {
      font-size: 14px;
      color: #999;
    }

    .file-input {
      display: none;
    }

    .file-info {
      margin-top: 20px;
      padding: 16px;
      background: #f8f8f8;
      border-radius: 8px;
      display: none;
    }

    .file-info.show {
      display: block;
    }

    .file-info strong {
      color: #1A5F5A;
    }

    .form-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 20px;
      margin-top: 24px;
    }

    .form-group.full-width {
      grid-column: 1 / -1;
    }

    .form-group .required {
      color: #c33;
    }

    .form-group input[dir="rtl"],
    .form-group textarea[dir="rtl"] {
      text-align: right;
    }

    .checkbox-group {
      display: flex;
      align-items: center;
      gap: 8px;
    }

    [dir="rtl"] .checkbox-group {
      flex-direction: row-reverse;
    }

    .checkbox-group input[type="checkbox"] {
      width: auto;
      margin: 0;
    }

    .form-actions {
      display: flex;
      gap: 12px;
      margin-top: 24px;
    }

    [dir="rtl"] .form-actions {
      flex-direction: row-reverse;
    }

    .message {
      padding: 12px 16px;
      border-radius: 8px;
      margin-bottom: 20px;
      display: none;
    }

    .message.show {
      display: block;
    }

    .message.success {
      background: #d4edda;
      color: #155724;
      border: 1px solid #c3e6cb;
    }

    .message.error {
      background: #f8d7da;
      color: #721c24;
      border: 1px solid #f5c6cb;
    }

    @media (max-width: 768px) {
      .form-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</head>
<body>
  <%- include('partials/header', { activePage: 'upload' }) %>

  <main class="admin-container">
    <div class="message" id="message"></div>

    <section class="upload-section">
      <h2><%= t('admin_upload_title') %></h2>

      <div class="drop-zone" id="dropZone">
        <div class="drop-zone-icon">ðŸŽµ</div>
        <div class="drop-zone-text"><%= t('admin_upload_drag_drop') %></div>
        <div class="drop-zone-hint"><%= t('admin_upload_supported') %> (<%= t('admin_upload_max_size') %>: 60MB)</div>
      </div>

      <input type="file" id="fileInput" class="file-input" accept="audio/*">

      <div class="file-info" id="fileInfo">
        <strong><%= adminLocale === 'ar' ? 'Ø§Ù„Ù…Ù„Ù Ø§Ù„Ù…Ø®ØªØ§Ø±:' : 'Selected file:' %></strong> <span id="fileName"></span><br>
        <strong><%= adminLocale === 'ar' ? 'Ø§Ù„Ø­Ø¬Ù…:' : 'Size:' %></strong> <span id="fileSize"></span>
      </div>

      <form id="uploadForm">
        <div class="form-grid">
          <div class="form-group full-width">
            <label><%= t('admin_form_title_ar') %> <span class="required">*</span></label>
            <input type="text" name="titleArabic" required placeholder="Ø¹Ù†ÙˆØ§Ù† Ø§Ù„Ù…Ø­Ø§Ø¶Ø±Ø© Ø¨Ø§Ù„Ø¹Ø±Ø¨ÙŠ" dir="rtl" class="form-control form-control-ar">
          </div>

          <div class="form-group full-width">
            <label><%= t('admin_form_title_en') %></label>
            <input type="text" name="titleEnglish" placeholder="Lecture Title in English" dir="ltr" class="form-control form-control-en">
          </div>

          <div class="form-group">
            <label><%= t('admin_th_sheikh') %> <span class="required">*</span></label>
            <select name="sheikhId" required id="sheikhSelect" class="form-control">
              <option value=""><%= t('admin_form_select') %></option>
            </select>
          </div>

          <div class="form-group">
            <label><%= t('admin_th_series') %></label>
            <select name="seriesId" id="seriesSelect" class="form-control">
              <option value=""><%= t('admin_form_none') %></option>
            </select>
          </div>

          <div class="form-group">
            <label><%= t('admin_form_lecture_number') %></label>
            <input type="number" name="lectureNumber" min="1" placeholder="1" class="form-control">
          </div>

          <div class="form-group">
            <label><%= t('admin_form_category') %></label>
            <select name="category" class="form-control">
              <option value="Other"><%= translateCategory('Other') %></option>
              <option value="Aqeedah"><%= translateCategory('Aqeedah') %></option>
              <option value="Fiqh"><%= translateCategory('Fiqh') %></option>
              <option value="Tafsir"><%= translateCategory('Tafsir') %></option>
              <option value="Hadith"><%= translateCategory('Hadith') %></option>
