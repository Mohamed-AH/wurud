  </main>

  <script>
    const msgs = {
      fillFields: '<%= adminLocale === "ar" ? "âŒ ÙŠØ±Ø¬Ù‰ Ù…Ù„Ø¡ Ø¬Ù…ÙŠØ¹ Ø§Ù„Ø­Ù‚ÙˆÙ„ Ø§Ù„Ù…Ø·Ù„ÙˆØ¨Ø©" : "âŒ Please fill in all required fields" %>',
      editorAdded: '<%= adminLocale === "ar" ? "âœ… ØªÙ…Øª Ø¥Ø¶Ø§ÙØ© Ø§Ù„Ù…Ø­Ø±Ø± Ø¨Ù†Ø¬Ø§Ø­! ÙŠÙ…ÙƒÙ†Ù‡ Ø§Ù„Ø¢Ù† ØªØ³Ø¬ÙŠÙ„ Ø§Ù„Ø¯Ø®ÙˆÙ„ Ø¹Ø¨Ø± Google OAuth." : "âœ… Editor added successfully! They can now login with Google OAuth." %>',
      errorPrefix: '<%= adminLocale === "ar" ? "âŒ Ø®Ø·Ø£: " : "âŒ Error: " %>',
      errorAdding: '<%= adminLocale === "ar" ? "âŒ Ø®Ø·Ø£ ÙÙŠ Ø¥Ø¶Ø§ÙØ© Ø§Ù„Ù…Ø­Ø±Ø±" : "âŒ Error adding editor" %>',
      confirmRole: '<%= adminLocale === "ar" ? "Ù‡Ù„ Ø£Ù†Øª Ù…ØªØ£ÙƒØ¯ Ù…Ù† ØªØºÙŠÙŠØ± Ø¯ÙˆØ± Ù‡Ø°Ø§ Ø§Ù„Ù…Ø³ØªØ®Ø¯Ù… Ø¥Ù„Ù‰" : "Are you sure you want to change this users role to" %>',
      roleUpdated: '<%= adminLocale === "ar" ? "âœ… ØªÙ… ØªØ­Ø¯ÙŠØ« Ø§Ù„Ø¯ÙˆØ± Ø¥Ù„Ù‰" : "âœ… Role updated to" %>',
      errorUpdating: '<%= adminLocale === "ar" ? "âŒ Ø®Ø·Ø£ ÙÙŠ ØªØ­Ø¯ÙŠØ« Ø§Ù„Ø¯ÙˆØ±" : "âŒ Error updating role" %>',
      confirmDeactivate: '<%= adminLocale === "ar" ? "Ù‡Ù„ Ø£Ù†Øª Ù…ØªØ£ÙƒØ¯ Ù…Ù† ØªØ¹Ø·ÙŠÙ„ Ù‡Ø°Ø§ Ø§Ù„Ù…Ø³ØªØ®Ø¯Ù…ØŸ" : "Are you sure you want to deactivate this user?" %>',
      confirmActivate: '<%= adminLocale === "ar" ? "Ù‡Ù„ Ø£Ù†Øª Ù…ØªØ£ÙƒØ¯ Ù…Ù† ØªÙØ¹ÙŠÙ„ Ù‡Ø°Ø§ Ø§Ù„Ù…Ø³ØªØ®Ø¯Ù…ØŸ" : "Are you sure you want to activate this user?" %>',
      userDeactivated: '<%= adminLocale === "ar" ? "âœ… ØªÙ… ØªØ¹Ø·ÙŠÙ„ Ø§Ù„Ù…Ø³ØªØ®Ø¯Ù… Ø¨Ù†Ø¬Ø§Ø­" : "âœ… User deactivated successfully" %>',
      userActivated: '<%= adminLocale === "ar" ? "âœ… ØªÙ… ØªÙØ¹ÙŠÙ„ Ø§Ù„Ù…Ø³ØªØ®Ø¯Ù… Ø¨Ù†Ø¬Ø§Ø­" : "âœ… User activated successfully" %>',
      errorToggling: '<%= adminLocale === "ar" ? "âŒ Ø®Ø·Ø£ ÙÙŠ ØªØºÙŠÙŠØ± Ø§Ù„Ø­Ø§Ù„Ø©" : "âŒ Error toggling active status" %>'
    };

    function showMessage(text, type) {
      const msg = document.getElementById('message');
      msg.textContent = text;
      msg.className = `message show ${type}`;

      setTimeout(() => {
        msg.className = 'message';
      }, 5000);
    }

    function showAddEditorForm() {
      document.getElementById('addEditorForm').classList.add('show');
      document.getElementById('newEditorEmail').focus();
    }

    function hideAddEditorForm() {
      document.getElementById('addEditorForm').classList.remove('show');
      document.getElementById('newEditorEmail').value = '';
      document.getElementById('newEditorName').value = '';
      document.getElementById('newEditorRole').value = 'editor';
    }

    function addEditor(event) {
      event.preventDefault();

      const email = document.getElementById('newEditorEmail').value;
      const displayName = document.getElementById('newEditorName').value;
      const role = document.getElementById('newEditorRole').value;

      if (!email || !displayName) {
        showMessage(msgs.fillFields, 'error');
        return;
      }

      fetch('/admin/users/add', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ email, displayName, role })
      })
      .then(res => res.json())
      .then(data => {
        if (data.success) {
          showMessage(msgs.editorAdded, 'success');
          hideAddEditorForm();
          setTimeout(() => window.location.reload(), 2000);
        } else {
          showMessage(msgs.errorPrefix + data.message, 'error');
        }
      })
      .catch(err => {
        console.error('Add editor error:', err);
        showMessage(msgs.errorAdding, 'error');
      });
    }

    function updateRole(userId, newRole) {
      if (!confirm(msgs.confirmRole + ' ' + newRole + '?')) {
        window.location.reload();
        return;
      }

      fetch(`/admin/users/${userId}/role`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ role: newRole })
      })
      .then(res => res.json())
      .then(data => {
        if (data.success) {
          showMessage(msgs.roleUpdated + ' ' + newRole, 'success');
          setTimeout(() => window.location.reload(), 1000);
        } else {
          showMessage(msgs.errorPrefix + data.message, 'error');
          window.location.reload();
        }
      })
      .catch(err => {
        console.error('Update role error:', err);
        showMessage(msgs.errorUpdating, 'error');
        window.location.reload();
      });
    }

    function toggleActive(userId, currentlyActive) {
      const confirmMsg = currentlyActive ? msgs.confirmDeactivate : msgs.confirmActivate;
      if (!confirm(confirmMsg)) {
        return;
      }

      fetch(`/admin/users/${userId}/toggle-active`, {
        method: 'POST'
      })
      .then(res => res.json())
      .then(data => {
        if (data.success) {
          showMessage(currentlyActive ? msgs.userDeactivated : msgs.userActivated, 'success');
          setTimeout(() => window.location.reload(), 1000);
        } else {
          showMessage(msgs.errorPrefix + data.message, 'error');
        }
      })
      .catch(err => {
        console.error('Toggle active error:', err);
        showMessage(msgs.errorToggling, 'error');
      });
    }
  </script>
</body>
