<header class="header">
  <div class="header-content">
    <a href="/" class="logo">
      <span class="logo-text">
        <%= locale === 'ar' ? 'موقع الشيخ حسن الدغريري' : 'Sheikh Hasan Dhaghriri' %>
      </span>
    </a>

    <!-- Desktop Navigation -->
    <nav class="nav-desktop">
      <a href="/" class="nav-link"><%= t('nav_home') %></a>
      <a href="/browse" class="nav-link"><%= t('nav_lectures') %></a>
      <a href="/series" class="nav-link"><%= t('nav_series') %></a>
