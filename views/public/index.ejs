<style>
  /* Search Hero Section */
  .search-hero {
    background: linear-gradient(135deg, var(--primary-dark) 0%, var(--primary-brown) 100%);
    padding: var(--space-2xl) var(--space-lg);
    text-align: center;
    margin-bottom: var(--space-2xl);
    border-bottom: 4px solid var(--accent-gold);
  }

  .search-hero-quote {
    font-family: var(--font-arabic-display);
    font-size: 24px;
    color: var(--cream);
    margin-bottom: var(--space-lg);
    font-weight: 600;
    line-height: 1.8;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
  }

  .search-container {
    max-width: 600px;
    margin: 0 auto;
    display: flex;
    gap: var(--space-md);
  }

  .search-input {
    flex: 1;
    padding: 14px 20px;
    border: 2px solid var(--accent-gold);
    border-radius: 8px;
    font-family: var(--font-arabic-body);
    font-size: 16px;
    background: var(--paper);
    color: var(--text-primary);
  }

  .search-input:focus {
    outline: none;
    box-shadow: 0 0 0 3px rgba(193, 154, 107, 0.3);
  }

  .search-btn {
    padding: 14px 32px;
    background: var(--accent-gold);
    color: var(--primary-dark);
    border: none;
    border-radius: 8px;
    font-family: var(--font-arabic-body);
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .search-btn:hover {
    background: var(--accent-amber);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px var(--shadow-warm);
  }

  /* Filter Chips */
  .filters-section {
    max-width: 1200px;
    margin: 0 auto var(--space-xl);
    padding: 0 var(--space-lg);
  }

  .filter-group {
    margin-bottom: var(--space-lg);
  }

  .filter-label {
    font-family: var(--font-arabic-display);
    font-size: 16px;
    font-weight: 600;
    color: var(--text-secondary);
    margin-bottom: var(--space-sm);
    display: block;
  }

  .filter-chips {
    display: flex;
    gap: var(--space-sm);
    flex-wrap: wrap;
  }

  .chip {
    padding: 8px 20px;
    border: 2px solid var(--accent-gold);
    border-radius: 24px;
    background: transparent;
    color: var(--text-primary);
    font-family: var(--font-arabic-body);
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .chip:hover {
    background: var(--cream);
  }

  .chip.active {
    background: var(--accent-gold);
    color: var(--primary-dark);
    font-weight: 600;
  }

  /* Series Cards */
  .series-list {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-lg) var(--space-3xl);
  }

  .series-card {
    background: white;
    border: 1px solid var(--border-light);
    border-radius: 12px;
    margin-bottom: var(--space-lg);
    overflow: hidden;
    box-shadow: 0 2px 8px var(--shadow-warm);
    transition: all 0.3s ease;
    position: relative;
  }

  /* Vertical gold accent bar */
  .series-card::before {
    content: '';
    position: absolute;
    right: 0;
    top: 0;
    bottom: 0;
    width: 6px;
    background: var(--accent-gold);
  }

  .series-card:hover {
    box-shadow: 0 4px 16px var(--shadow-warm);
    transform: translateY(-2px);
  }

  .series-header {
    padding: var(--space-lg);
    padding-right: calc(var(--space-lg) + 12px);
    cursor: pointer;
  }

  .series-title {
    font-family: var(--font-arabic-display);
    font-size: 22px;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: var(--space-sm);
    line-height: 1.6;
  }

  .series-meta {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-md);
    align-items: center;
    margin-bottom: var(--space-sm);
  }

  /* Prominent author display */
  .series-author {
    font-family: var(--font-arabic-display);
    font-size: 18px;
    color: var(--accent-gold);
    font-weight: 600;
  }

  .series-author-label {
    color: var(--text-muted);
    font-weight: 500;
  }

  .series-sheikh {
    font-size: 16px;
    color: var(--text-secondary);
  }

  .series-info {
    display: flex;
    gap: var(--space-md);
    font-size: 14px;
    color: var(--text-muted);
  }

  .series-info span {
    display: flex;
    align-items: center;
    gap: 4px;
  }

  .category-badge {
    display: inline-block;
    padding: 4px 12px;
    border-radius: 12px;
    font-size: 12px;
    font-weight: 600;
    background: var(--cream);
    color: var(--text-secondary);
    border: 1px solid var(--border-light);
  }

  .expand-btn {
    margin-top: var(--space-md);
    padding: 10px 20px;
    background: transparent;
    border: 2px solid var(--accent-gold);
    border-radius: 6px;
    color: var(--text-primary);
    font-family: var(--font-arabic-body);
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    width: 100%;
  }

  .expand-btn:hover {
    background: var(--cream);
  }

  .expand-btn.expanded {
    background: var(--accent-gold);
    color: var(--primary-dark);
  }

  /* Episodes List */
  .episodes-list {
    display: none;
    border-top: 1px solid var(--border-light);
    background: var(--cream);
  }

  .episodes-list.show {
    display: block;
  }

  .episode-item {
    padding: var(--space-md) var(--space-lg);
    padding-right: calc(var(--space-lg) + 12px);
    border-bottom: 1px solid var(--border-light);
    transition: background 0.2s ease;
  }

  .episode-item:last-child {
    border-bottom: none;
  }

  .episode-item:hover {
    background: white;
  }

  .episode-title {
    font-family: var(--font-arabic-body);
    font-size: 16px;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 6px;
  }

  .episode-meta {
    font-size: 14px;
    color: var(--text-muted);
    margin-bottom: var(--space-sm);
  }

  .episode-actions {
    display: flex;
    gap: var(--space-sm);
  }

  .btn-play, .btn-download {
    padding: 8px 16px;
    border-radius: 6px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 6px;
  }

  .btn-play {
    background: var(--accent-gold);
    color: var(--primary-dark);
    border: none;
  }

  .btn-play:hover {
    background: var(--accent-amber);
    transform: translateY(-2px);
  }

  .btn-download {
    background: transparent;
    border: 2px solid var(--accent-gold);
    color: var(--text-primary);
  }

  .btn-download:hover {
    background: var(--cream);
  }

  /* Empty State */
  .empty-state {
    text-align: center;
    padding: var(--space-3xl);
    color: var(--text-muted);
  }

  .empty-icon {
    font-size: 64px;
    margin-bottom: var(--space-md);
  }

  .empty-title {
    font-family: var(--font-arabic-display);
    font-size: 24px;
    font-weight: 600;
    margin-bottom: var(--space-sm);
    color: var(--text-secondary);
  }

  .empty-text {
    font-size: 16px;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .search-hero-quote {
      font-size: 18px;
    }

    .search-container {
      flex-direction: column;
    }

    .series-meta {
      flex-direction: column;
      align-items: flex-start;
    }

    .episode-actions {
      flex-direction: column;
    }

    .btn-play, .btn-download {
      width: 100%;
      justify-content: center;
    }
  }
</style>

