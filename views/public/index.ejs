    margin-bottom: 16px;
  }

  @media (max-width: 768px) {
    .hero h1 {
      font-size: 32px;
    }

    .hero p {
      font-size: 16px;
    }

    .section-title {
      font-size: 24px;
    }

    .stats-grid {
      grid-template-columns: 1fr 1fr;
      gap: 24px;
    }

    .stat-item h3 {
      font-size: 32px;
    }
  }
</style>

