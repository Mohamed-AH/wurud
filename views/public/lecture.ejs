<style>
  /* Brown/Gold Design for Lecture Detail Page */
  .lecture-detail-page {
    padding: 0;
  }

  .breadcrumb {
    background: var(--cream);
    padding: 16px 0;
    border-bottom: 2px solid var(--accent-amber);
  }

  .breadcrumb .container {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
  }

  .breadcrumb a {
    color: var(--text-secondary);
    text-decoration: none;
    transition: color 0.3s;
  }

  .breadcrumb a:hover {
    color: var(--accent-gold);
  }

  .breadcrumb .separator {
    color: var(--text-muted);
  }

  .breadcrumb .current {
    color: var(--text-primary);
    font-weight: 600;
  }

  .lecture-hero {
    background: linear-gradient(135deg, var(--primary-brown) 0%, var(--sage) 100%);
    padding: 48px 0;
    border-bottom: 3px solid var(--accent-gold);
  }

  .lecture-title {
    font-family: var(--font-arabic-display);
    font-size: 42px;
    color: var(--cream);
    margin-bottom: 12px;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
  }

  .lecture-title-en {
    font-size: 24px;
    color: var(--cream);
    opacity: 0.9;
    margin-bottom: 24px;
    font-weight: 400;
  }

  .lecture-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 24px;
    margin-top: 24px;
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 8px;
    color: var(--cream);
    font-size: 16px;
  }

  .meta-item .icon {
    opacity: 0.8;
  }

  .meta-item a {
    color: var(--accent-gold);
    text-decoration: none;
    transition: color 0.3s;
  }

  .meta-item a:hover {
    color: var(--accent-amber);
  }

  .badge {
    background: var(--accent-gold);
    color: var(--primary-dark);
    padding: 4px 12px;
    border-radius: 12px;
    font-size: 14px;
    font-weight: 600;
  }

  .lecture-content {
    padding: 48px 0;
  }

  .content-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 32px;
  }

  .main-content {
    background: var(--cream);
    border-radius: 16px;
    padding: 32px;
    border: 2px solid var(--accent-amber);
    box-shadow: 0 4px 12px var(--shadow-warm);
  }

  .section-title {
    font-family: var(--font-arabic-display);
    font-size: 24px;
    color: var(--primary-dark);
    margin-bottom: 20px;
    padding-bottom: 12px;
    border-bottom: 2px solid var(--accent-gold);
  }

  .play-section {
    text-align: center;
    padding: 40px 20px;
    background: linear-gradient(135deg, var(--cream) 0%, var(--paper) 100%);
    border-radius: 12px;
    margin-bottom: 32px;
  }

  .btn-play-large {
    background: var(--accent-gold);
    color: var(--primary-dark);
    border: none;
    border-radius: 50%;
    width: 80px;
    height: 80px;
    font-size: 32px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s;
    box-shadow: 0 4px 16px var(--shadow-warm);
    margin-bottom: 16px;
  }

  .btn-play-large:hover {
    background: var(--accent-amber);
    transform: scale(1.1);
    box-shadow: 0 6px 20px var(--shadow-warm);
  }

  .play-text {
    font-size: 18px;
    color: var(--text-secondary);
    margin-bottom: 8px;
  }

  .play-subtitle {
    font-size: 14px;
    color: var(--text-muted);
  }

  .action-buttons {
    display: flex;
    gap: 12px;
    justify-content: center;
    margin-top: 20px;
  }

  .btn {
    padding: 12px 24px;
    border-radius: 8px;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-size: 16px;
    font-weight: 600;
    transition: all 0.3s;
    cursor: pointer;
  }

  .btn-download {
    background: var(--accent-gold);
    color: var(--primary-dark);
    border: none;
    box-shadow: 0 2px 8px var(--shadow-warm);
  }

  .btn-download:hover {
    background: var(--accent-amber);
    transform: translateY(-2px);
  }

  .btn-share {
    background: transparent;
    color: var(--text-secondary);
    border: 2px solid var(--accent-amber);
  }

  .btn-share:hover {
    background: var(--cream);
    border-color: var(--accent-gold);
  }

  .info-grid {
    display: grid;
    gap: 16px;
    margin-top: 20px;
  }

  .info-item {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px;
    background: var(--paper);
    border-radius: 8px;
    border-right: 4px solid var(--accent-gold);
  }

  .info-item .icon {
    color: var(--accent-gold);
  }

  .info-label {
    color: var(--text-muted);
    font-size: 14px;
  }

  .info-value {
    color: var(--text-primary);
    font-weight: 600;
    font-size: 16px;
  }

  .description-section {
    margin-top: 32px;
  }

  .description-text {
    color: var(--text-secondary);
    line-height: 1.8;
    font-size: 16px;
  }

  .sidebar {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .sidebar-card {
    background: var(--cream);
    border-radius: 12px;
    padding: 24px;
    border: 2px solid var(--accent-amber);
    box-shadow: 0 4px 12px var(--shadow-warm);
  }

  .sidebar-title {
    font-family: var(--font-arabic-display);
    font-size: 20px;
    color: var(--primary-dark);
    margin-bottom: 16px;
    padding-bottom: 12px;
    border-bottom: 2px solid var(--accent-gold);
  }

  .related-lecture {
    padding: 12px;
    background: var(--paper);
    border-radius: 8px;
    margin-bottom: 12px;
    transition: all 0.3s;
    cursor: pointer;
    border: 1px solid var(--border-light);
  }

  .related-lecture:hover {
    background: white;
    border-color: var(--accent-gold);
    transform: translateX(-4px);
  }

  .related-lecture-title {
    color: var(--text-primary);
    font-size: 15px;
    font-weight: 600;
    margin-bottom: 4px;
  }

  .related-lecture-meta {
    color: var(--text-muted);
    font-size: 13px;
  }

  @media (max-width: 968px) {
    .content-grid {
      grid-template-columns: 1fr;
    }

    .lecture-title {
      font-size: 32px;
    }

    .main-content {
      padding: 20px;
    }
  }

  /* Small phones (below 480px) */
  @media (max-width: 480px) {
    .breadcrumb .container {
      font-size: 12px;
      flex-wrap: wrap;
      gap: 4px;
    }

    .lecture-hero {
      padding: 32px 0;
    }

    .lecture-title {
      font-size: 26px;
      margin-bottom: 8px;
    }

    .lecture-title-en {
      font-size: 18px;
      margin-bottom: 16px;
    }

    .lecture-meta {
      gap: 16px;
      flex-direction: column;
      align-items: flex-start;
    }

    .meta-item {
      font-size: 14px;
    }

    .badge {
      font-size: 12px;
      padding: 3px 10px;
    }

    .lecture-content {
      padding: 24px 0;
    }

    .main-content {
      padding: 16px;
      border-radius: 12px;
    }

    .section-title {
      font-size: 20px;
      margin-bottom: 16px;
    }

    .play-section {
      padding: 24px 12px;
    }

    .btn-play-large {
      width: 64px;
      height: 64px;
      font-size: 26px;
    }

    .play-text {
      font-size: 16px;
    }

    .action-buttons {
      flex-direction: column;
      gap: 10px;
    }

    .btn {
      width: 100%;
      justify-content: center;
      padding: 10px 16px;
      font-size: 14px;
    }

    .related-lecture-title {
      font-size: 15px;
    }

    .related-lecture-meta {
      font-size: 12px;
    }
  }

  /* Very small phones (below 360px) */
  @media (max-width: 360px) {
    .breadcrumb .container {
      font-size: 11px;
    }

    .lecture-hero {
      padding: 24px 0;
    }

    .lecture-title {
      font-size: 22px;
    }

    .lecture-title-en {
      font-size: 16px;
    }

    .meta-item {
      font-size: 13px;
    }

    .main-content {
      padding: 12px;
    }

    .section-title {
      font-size: 18px;
    }

    .play-section {
      padding: 20px 10px;
    }

    .btn-play-large {
      width: 56px;
      height: 56px;
      font-size: 22px;
    }

    .play-text {
      font-size: 14px;
    }

    .play-subtitle {
      font-size: 12px;
    }

    .btn {
      padding: 8px 12px;
      font-size: 13px;
    }

    .related-lecture-title {
      font-size: 14px;
    }

    .related-lecture-meta {
      font-size: 11px;
    }
  }
</style>

<div class="lecture-detail-page">
  <!-- Breadcrumb -->
  <nav class="breadcrumb">
    <div class="container">
      <a href="/">الرئيسية</a>
      <span class="separator">›</span>
      <a href="/browse">المحاضرات</a>
      <span class="separator">›</span>
      <span class="current"><%= lecture.titleArabic %></span>
    </div>
  </nav>

  <!-- Hero Section -->
  <div class="lecture-hero">
    <div class="container">
      <h1 class="lecture-title"><%= lecture.titleArabic %></h1>
      <% if (lecture.titleEnglish) { %>
        <h2 class="lecture-title-en"><%= lecture.titleEnglish %></h2>
      <% } %>

      <div class="lecture-meta">
        <!-- Sheikh -->
        <% if (lecture.sheikhId) { %>
          <div class="meta-item sheikh-info">
            <svg class="icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
              <circle cx="12" cy="7" r="4"></circle>
            </svg>
            <a href="/sheikhs/<%= lecture.sheikhId.slug ? encodeURIComponent(lecture.sheikhId.slug) : lecture.sheikhId._id %>">
              <%= lecture.sheikhId.nameArabic %>
              <% if (lecture.sheikhId.honorific) { %>
                <span class="honorific"><%= lecture.sheikhId.honorific %></span>
              <% } %>
            </a>
          </div>
        <% } %>

        <!-- Series -->
        <% if (lecture.seriesId) { %>
          <div class="meta-item series-info">
            <svg class="icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
              <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path>
            </svg>
            <a href="/series/<%= lecture.seriesId.slug ? encodeURIComponent(lecture.seriesId.slug) : lecture.seriesId._id %>">
              <%= lecture.seriesId.titleArabic %>
              <% if (lecture.lectureNumber) { %>
                <span class="lecture-number">(الدرس <%= lecture.lectureNumber %>)</span>
              <% } %>
            </a>
          </div>
        <% } %>

        <!-- Category -->
        <% if (lecture.category) { %>
          <%
            const categoryArabic = {
              'Tafsir': 'تفسير',
              'Hadith': 'حديث',
              'Fiqh': 'فقه',
              'Aqeedah': 'عقيدة',
              'Seerah': 'سيرة',
              'Akhlaq': 'أخلاق',
              'Other': 'أخرى'
            };
          %>
          <div class="meta-item">
            <span class="badge"><%= locale === 'ar' ? (categoryArabic[lecture.category] || lecture.category) : lecture.category %></span>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="lecture-content">
    <div class="container">
      <div class="content-grid">
        <!-- Main Content -->
        <div class="main-content">
          <!-- Play Section -->
          <% if (lecture.audioFileName) { %>
            <div class="play-section">
              <button class="btn-play-large" onclick="playLecture()" title="تشغيل">
                ▶️
              </button>
              <div class="play-text">انقر للتشغيل في المشغل الثابت</div>
              <div class="play-subtitle">سيظل المشغل ظاهراً أثناء تصفحك للموقع</div>

              <div class="action-buttons">
                <a href="/download/<%= lecture._id %>" class="btn btn-download">
                  <svg class="icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                    <polyline points="7 10 12 15 17 10"></polyline>
                    <line x1="12" y1="15" x2="12" y2="3"></line>
                  </svg>
                  تحميل
                  <% if (lecture.fileSizeMB) { %>
                    <span>(<%= lecture.fileSizeMB %> MB)</span>
                  <% } %>
                </a>

                <button class="btn btn-share" onclick="shareLecture()">
                  <svg class="icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <circle cx="18" cy="5" r="3"></circle>
                    <circle cx="6" cy="12" r="3"></circle>
                    <circle cx="18" cy="19" r="3"></circle>
                    <line x1="8.59" y1="13.51" x2="15.42" y2="17.49"></line>
                    <line x1="15.41" y1="6.51" x2="8.59" y2="10.49"></line>
                  </svg>
                  مشاركة
                </button>
              </div>
            </div>
          <% } else { %>
            <div class="play-section">
              <div class="play-text">⚠️ لا يوجد ملف صوتي لهذه المحاضرة</div>
            </div>
          <% } %>

          <!-- Lecture Info -->
          <h3 class="section-title">معلومات المحاضرة</h3>
          <div class="info-grid">
            <% if (lecture.duration) { %>
              <div class="info-item">
                <svg class="icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                  <circle cx="12" cy="12" r="10"></circle>
                  <polyline points="12 6 12 12 16 14"></polyline>
                </svg>
                <div>
                  <div class="info-label">المدة</div>
                  <div class="info-value"><%= lecture.durationFormatted %></div>
                </div>
              </div>
            <% } %>

            <% if (lecture.playCount) { %>
              <div class="info-item">
                <svg class="icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                  <polygon points="5 3 19 12 5 21 5 3"></polygon>
                </svg>
                <div>
                  <div class="info-label">مرات الاستماع</div>
                  <div class="info-value"><%= lecture.playCount %></div>
                </div>
              </div>
            <% } %>

            <% if (lecture.location) { %>
              <div class="info-item">
                <svg class="icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                  <circle cx="12" cy="10" r="3"></circle>
                </svg>
                <div>
                  <div class="info-label">المكان</div>
                  <div class="info-value"><%= lecture.location %></div>
                </div>
              </div>
            <% } %>

            <% if (lecture.dateRecordedHijri || lecture.dateRecorded) { %>
              <div class="info-item">
                <svg class="icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                  <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                  <line x1="16" y1="2" x2="16" y2="6"></line>
                  <line x1="8" y1="2" x2="8" y2="6"></line>
                  <line x1="3" y1="10" x2="21" y2="10"></line>
                </svg>
                <div>
                  <div class="info-label">تاريخ التسجيل (هجري)</div>
                  <div class="info-value">
                    <% if (lecture.dateRecordedHijri) { %>
                      <%= formatHijriDate(lecture.dateRecordedHijri) %>
                    <% } else { %>
                      -
                    <% } %>
                  </div>
                </div>
              </div>
            <% } %>
          </div>

          <!-- Description -->
          <% if (lecture.descriptionArabic) { %>
            <div class="description-section">
              <h3 class="section-title">الوصف</h3>
              <p class="description-text"><%= lecture.descriptionArabic %></p>
            </div>
          <% } %>

          <!-- Sheikh Bio -->
          <% if (lecture.sheikhId && lecture.sheikhId.bioArabic) { %>
            <div class="description-section">
              <h3 class="section-title">نبذة عن الشيخ</h3>
              <p class="description-text"><%= lecture.sheikhId.bioArabic.substring(0, 300) %>...</p>
              <a href="/sheikhs/<%= lecture.sheikhId.slug ? encodeURIComponent(lecture.sheikhId.slug) : lecture.sheikhId._id %>" style="color: var(--accent-gold); text-decoration: none; font-weight: 600;">
                المزيد عن الشيخ ←
              </a>
            </div>
          <% } %>
        </div>

        <!-- Sidebar -->
        <aside class="sidebar">
          <!-- Related Lectures -->
          <% if (relatedLectures && relatedLectures.length > 0) { %>
            <div class="sidebar-card">
              <h3 class="sidebar-title">محاضرات ذات صلة</h3>
              <% relatedLectures.forEach(related => { %>
                <a href="/lectures/<%= related.slug ? encodeURIComponent(related.slug) : related._id %>" style="text-decoration: none;">
                  <div class="related-lecture">
                    <div class="related-lecture-title"><%= related.titleArabic %></div>
                    <div class="related-lecture-meta">
                      <% if (related.sheikhId) { %>
                        <%= related.sheikhId.nameArabic %>
                      <% } %>
                      <% if (related.duration) { %>
                        • <%= related.durationFormatted %>
                      <% } %>
                    </div>
                  </div>
                </a>
              <% }); %>
            </div>
          <% } %>
        </aside>
      </div>
    </div>
  </div>
</div>

<script>
  // Play using sticky player
  function playLecture() {
    console.log('▶️ Play from lecture detail page');

    if (window.audioPlayer) {
      window.audioPlayer.play('<%= lecture._id %>', {
        title: '<%= lecture.titleArabic.replace(/'/g, "\\'") %>',
        titleArabic: '<%= lecture.titleArabic.replace(/'/g, "\\'") %>',
        sheikh: '<%= lecture.sheikhId ? lecture.sheikhId.nameArabic.replace(/'/g, "\\'") : "" %>'
      });
    } else {
      console.error('❌ Audio player not initialized');
      alert('مشغل الصوت يتم تحميله، يرجى المحاولة مرة أخرى');
    }
  }

  // Share functionality
  function shareLecture() {
    const url = window.location.href;
    const title = '<%= lecture.titleArabic %>';
    const text = `استمع إلى: ${title}`;

    if (navigator.share) {
      navigator.share({ title, text, url })
        .catch(err => console.log('Share cancelled', err));
    } else {
      // Fallback: copy to clipboard
      navigator.clipboard.writeText(url).then(() => {
        alert('تم نسخ الرابط!');
      });
    }
  }
</script>
