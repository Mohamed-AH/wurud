<style>
  /* Brown/Gold Design for Series Detail Page */
  .series-detail-page {
    padding: 0;
  }

  .breadcrumb {
    background: var(--cream);
    padding: 16px 0;
    border-bottom: 2px solid var(--accent-amber);
  }

  .breadcrumb .container {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
  }

  .breadcrumb a {
    color: var(--text-secondary);
    text-decoration: none;
    transition: color 0.3s;
  }

  .breadcrumb a:hover {
    color: var(--accent-gold);
  }

  .breadcrumb .separator {
    color: var(--text-muted);
  }

  .breadcrumb .current {
    color: var(--text-primary);
    font-weight: 600;
  }

  .series-hero {
    background: linear-gradient(135deg, var(--primary-brown) 0%, var(--sage) 100%);
    padding: 48px 0;
    border-bottom: 3px solid var(--accent-gold);
  }

  .series-category-badge {
    background: var(--accent-gold);
    color: var(--primary-dark);
    padding: 6px 16px;
    border-radius: 16px;
    font-size: 14px;
    font-weight: 600;
    display: inline-block;
    margin-bottom: 16px;
  }

  .series-title {
    font-family: var(--font-arabic-display);
    font-size: 42px;
    color: var(--cream);
    margin-bottom: 12px;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
  }

  .series-title-en {
    font-size: 24px;
    color: var(--cream);
    opacity: 0.9;
    margin-bottom: 24px;
    font-weight: 400;
  }

  .series-sheikh {
    display: flex;
    align-items: center;
    gap: 8px;
    color: var(--cream);
    font-size: 18px;
  }

  .series-sheikh a {
    color: var(--accent-gold);
    text-decoration: none;
    transition: color 0.3s;
  }

  .series-sheikh a:hover {
    color: var(--accent-amber);
  }

  .stats-section {
    padding: 40px 0;
    background: var(--paper);
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 24px;
  }

  .stat-card {
    background: var(--cream);
    border-radius: 12px;
    padding: 24px;
    display: flex;
    align-items: center;
    gap: 16px;
    border: 2px solid var(--accent-amber);
    box-shadow: 0 4px 12px var(--shadow-warm);
  }

  .stat-icon {
    width: 56px;
    height: 56px;
    border-radius: 12px;
    background: linear-gradient(135deg, var(--accent-gold) 0%, var(--accent-amber) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .stat-icon svg {
    color: var(--primary-dark);
  }

  .stat-value {
    font-family: var(--font-arabic-display);
    font-size: 32px;
    color: var(--primary-dark);
    font-weight: 700;
  }

  .stat-label {
    color: var(--text-secondary);
    font-size: 14px;
  }

  .content-section {
    padding: 48px 0;
  }

  .section-title {
    font-family: var(--font-arabic-display);
    font-size: 28px;
    color: var(--primary-dark);
    margin-bottom: 24px;
    padding-bottom: 12px;
    border-bottom: 3px solid var(--accent-gold);
  }

  .description-card, .bio-card {
    background: var(--cream);
    border-radius: 12px;
    padding: 32px;
    border: 2px solid var(--accent-amber);
    box-shadow: 0 4px 12px var(--shadow-warm);
    margin-bottom: 48px;
  }

  .description-text, .bio-text {
    color: var(--text-secondary);
    line-height: 1.9;
    font-size: 18px;
  }

  .description-text-en, .bio-text-en {
    color: var(--text-muted);
    line-height: 1.7;
    font-size: 16px;
    margin-top: 16px;
    font-style: italic;
  }

  .btn-link {
    color: var(--accent-gold);
    text-decoration: none;
    font-weight: 600;
    margin-top: 16px;
    display: inline-block;
  }

  .btn-link:hover {
    color: var(--accent-amber);
  }

  .lectures-list {
    display: grid;
    gap: 16px;
  }

  .lecture-item {
    display: flex;
    align-items: flex-start;
    gap: 16px;
  }

  .lecture-number-badge {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: var(--accent-gold);
    color: var(--primary-dark);
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-arabic-display);
    font-size: 20px;
    font-weight: 700;
    flex-shrink: 0;
    box-shadow: 0 2px 8px var(--shadow-warm);
  }

  .lecture-number-badge.unnumbered {
    background: transparent;
    border: 2px dashed var(--accent-amber);
    color: var(--text-muted);
  }

  .lecture-item-content {
    flex: 1;
  }

  .empty-state {
    text-align: center;
    padding: 80px 20px;
    color: var(--text-secondary);
  }

  .empty-icon {
    font-size: 64px;
    margin-bottom: 16px;
    opacity: 0.5;
  }

  @media (max-width: 768px) {
    .series-title {
      font-size: 32px;
    }

    .stats-grid {
      grid-template-columns: 1fr;
    }

    .lecture-number-badge {
      width: 40px;
      height: 40px;
      font-size: 18px;
    }
  }
</style>

