<style>
  .page-header {
    background: linear-gradient(135deg, var(--primary-brown) 0%, var(--sage) 100%);
    padding: 48px 0;
    margin-bottom: 40px;
    border-bottom: 3px solid var(--accent-gold);
  }

  .page-title {
    font-size: 36px;
    font-family: var(--font-arabic-display);
    color: var(--cream);
    margin-bottom: 8px;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
  }

  .page-subtitle {
    color: var(--cream);
    font-size: 16px;
    opacity: 0.9;
  }

  .series-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 24px;
    margin-bottom: 60px;
  }

  .series-card {
    background: var(--cream);
    border-radius: 12px;
    padding: 24px;
    text-decoration: none;
    transition: all 0.3s;
    border: 2px solid var(--accent-amber);
    display: flex;
    gap: 16px;
    box-shadow: 0 4px 12px var(--shadow-warm);
  }

  .series-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 20px var(--shadow-warm);
    border-color: var(--accent-gold);
  }

  .series-icon {
    width: 56px;
    height: 56px;
    border-radius: 8px;
    background: var(--accent-gold);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .series-icon svg {
    color: var(--primary-dark);
  }

  .series-content {
    flex: 1;
  }

  .series-title {
    font-family: var(--font-arabic-display);
    font-size: 22px;
    color: var(--primary-dark);
    margin-bottom: 4px;
  }

  .series-title-en {
    color: var(--text-muted);
    font-size: 14px;
    margin-bottom: 12px;
    font-style: italic;
  }

  .series-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
    font-size: 14px;
    color: var(--text-secondary);
    align-items: center;
  }

  .series-sheikh {
    color: var(--accent-gold);
    font-weight: 600;
  }

  .series-category {
    background: var(--accent-amber);
    color: var(--primary-dark);
    padding: 2px 8px;
    border-radius: 8px;
    font-weight: 600;
    font-size: 12px;
  }

  .empty-state {
    text-align: center;
    padding: 80px 20px;
    color: var(--text-secondary);
  }

  .empty-icon {
    font-size: 64px;
    margin-bottom: 16px;
    opacity: 0.5;
  }

  @media (max-width: 768px) {
    .page-title {
      font-size: 28px;
    }

    .series-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

