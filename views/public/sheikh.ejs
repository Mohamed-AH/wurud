<style>
  /* Brown/Gold Design for Sheikh Profile Page */
  .sheikh-profile-page {
    padding: 0;
  }

  .breadcrumb {
    background: var(--cream);
    padding: 16px 0;
    border-bottom: 2px solid var(--accent-amber);
  }

  .breadcrumb .container {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
  }

  .breadcrumb a {
    color: var(--text-secondary);
    text-decoration: none;
    transition: color 0.3s;
  }

  .breadcrumb a:hover {
    color: var(--accent-gold);
  }

  .breadcrumb .separator {
    color: var(--text-muted);
  }

  .breadcrumb .current {
    color: var(--text-primary);
    font-weight: 600;
  }

  .sheikh-hero {
    background: linear-gradient(135deg, var(--primary-brown) 0%, var(--sage) 100%);
    padding: 48px 0;
    border-bottom: 3px solid var(--accent-gold);
  }

  .sheikh-hero-content {
    display: flex;
    align-items: center;
    gap: 32px;
  }

  .sheikh-avatar {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    background: var(--accent-gold);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    box-shadow: 0 4px 16px var(--shadow-warm);
  }

  .sheikh-avatar svg {
    color: var(--primary-dark);
    opacity: 0.8;
  }

  .sheikh-name {
    font-family: var(--font-arabic-display);
    font-size: 42px;
    color: var(--cream);
    margin-bottom: 8px;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    word-wrap: break-word;
    overflow-wrap: break-word;
    line-height: 1.2;
  }

  .sheikh-honorific {
    color: var(--accent-gold);
    font-size: 18px;
    margin-bottom: 8px;
  }

  .sheikh-name-en {
    color: var(--cream);
    opacity: 0.9;
    font-size: 20px;
  }

  .stats-section {
    padding: 40px 0;
    background: var(--paper);
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 24px;
  }

  .stat-card {
    background: var(--cream);
    border-radius: 12px;
    padding: 24px;
    display: flex;
    align-items: center;
    gap: 16px;
    border: 2px solid var(--accent-amber);
    box-shadow: 0 4px 12px var(--shadow-warm);
  }

  .stat-icon {
    width: 56px;
    height: 56px;
    border-radius: 12px;
    background: linear-gradient(135deg, var(--accent-gold) 0%, var(--accent-amber) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .stat-icon svg {
    color: var(--primary-dark);
  }

  .stat-value {
    font-family: var(--font-arabic-display);
    font-size: 32px;
    color: var(--primary-dark);
    font-weight: 700;
  }

  .stat-label {
    color: var(--text-secondary);
    font-size: 14px;
  }

  .content-section {
    padding: 48px 0;
  }

  .section-title {
    font-family: var(--font-arabic-display);
    font-size: 28px;
    color: var(--primary-dark);
    margin-bottom: 24px;
    padding-bottom: 12px;
    border-bottom: 3px solid var(--accent-gold);
  }

  .bio-card {
    background: var(--cream);
    border-radius: 12px;
    padding: 32px;
    border: 2px solid var(--accent-amber);
    box-shadow: 0 4px 12px var(--shadow-warm);
    margin-bottom: 48px;
  }

  .bio-text {
    color: var(--text-secondary);
    line-height: 1.9;
    font-size: 18px;
  }

  .bio-text-en {
    color: var(--text-muted);
    line-height: 1.7;
    font-size: 16px;
    margin-top: 16px;
    font-style: italic;
  }

  .series-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 24px;
    margin-bottom: 48px;
  }

  .series-card {
    background: var(--cream);
    border-radius: 12px;
    padding: 24px;
    text-decoration: none;
    transition: all 0.3s;
    border: 2px solid var(--accent-amber);
    display: flex;
    gap: 16px;
    box-shadow: 0 4px 12px var(--shadow-warm);
  }

  .series-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 20px var(--shadow-warm);
    border-color: var(--accent-gold);
  }

  .series-icon {
    width: 48px;
    height: 48px;
    border-radius: 8px;
    background: var(--accent-gold);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .series-icon svg {
    color: var(--primary-dark);
  }

  .series-title {
    font-family: var(--font-arabic-display);
    font-size: 20px;
    color: var(--primary-dark);
    margin-bottom: 4px;
  }

  .series-title-en {
    color: var(--text-muted);
    font-size: 14px;
    margin-bottom: 12px;
  }

  .series-meta {
    display: flex;
    gap: 12px;
    font-size: 14px;
    color: var(--text-secondary);
  }

  .series-category {
    background: var(--accent-gold);
    color: var(--primary-dark);
    padding: 2px 8px;
    border-radius: 8px;
    font-weight: 600;
  }

  .lectures-list {
    display: grid;
    gap: 16px;
  }

  .empty-state {
    text-align: center;
    padding: 80px 20px;
    color: var(--text-secondary);
  }

  .empty-icon {
    font-size: 64px;
    margin-bottom: 16px;
    opacity: 0.5;
  }

  @media (max-width: 768px) {
    .sheikh-hero {
      padding: 32px 0;
      overflow: hidden;
    }

    .sheikh-hero-content {
      flex-direction: column;
      text-align: center;
    }

    .sheikh-info {
      max-width: 100%;
      overflow: hidden;
      padding: 0 16px;
    }

    .sheikh-name {
      font-size: 26px;
      word-break: break-word;
      hyphens: auto;
    }

    .sheikh-honorific {
      font-size: 16px;
    }

    .sheikh-name-en {
      font-size: 16px;
    }

    .stats-grid {
      grid-template-columns: 1fr;
    }

    .series-grid {
      grid-template-columns: 1fr;
    }

    .series-card {
      flex-direction: column;
      text-align: center;
    }

    .series-content {
      width: 100%;
      overflow: hidden;
    }

    .series-title {
      font-size: 18px;
      word-break: break-word;
    }
  }
</style>

