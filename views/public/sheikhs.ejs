<style>
  .page-header {
    background: linear-gradient(135deg, var(--primary-brown) 0%, var(--sage) 100%);
    padding: 48px 0;
    margin-bottom: 40px;
    border-bottom: 3px solid var(--accent-gold);
  }

  .page-title {
    font-size: 36px;
    font-family: var(--font-arabic-display);
    color: var(--cream);
    margin-bottom: 8px;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
  }

  .page-subtitle {
    color: var(--cream);
    font-size: 16px;
    opacity: 0.9;
  }

  .sheikhs-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 24px;
    margin-bottom: 60px;
  }

  .sheikh-card {
    background: var(--cream);
    border-radius: 12px;
    padding: 24px;
    text-decoration: none;
    transition: all 0.3s;
    border: 2px solid var(--accent-amber);
    display: flex;
    gap: 16px;
    box-shadow: 0 4px 12px var(--shadow-warm);
  }

  .sheikh-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 20px var(--shadow-warm);
    border-color: var(--accent-gold);
  }

  .sheikh-avatar {
    width: 64px;
    height: 64px;
    border-radius: 50%;
    background: var(--accent-gold);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .sheikh-avatar svg {
    color: var(--primary-dark);
    opacity: 0.8;
  }

  .sheikh-info {
    flex: 1;
  }

  .sheikh-name {
    font-family: var(--font-arabic-display);
    font-size: 22px;
    color: var(--primary-dark);
    margin-bottom: 4px;
  }

  .sheikh-honorific {
    color: var(--accent-gold);
    font-size: 14px;
    margin-bottom: 8px;
  }

  .sheikh-name-en {
    color: var(--text-muted);
    font-size: 14px;
    font-style: italic;
  }

  .empty-state {
    text-align: center;
    padding: 80px 20px;
    color: var(--text-secondary);
  }

  .empty-icon {
    font-size: 64px;
    margin-bottom: 16px;
    opacity: 0.5;
  }

  @media (max-width: 768px) {
    .page-title {
      font-size: 28px;
    }

    .sheikhs-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

